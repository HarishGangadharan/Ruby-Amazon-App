<div class='container w-50'>
<h2 class='text-center font-weight-bold m-4'> Edit Product </h2>
<%= form_for @product do |f| %>

   
   <div class='d-flex'>
<div class="form-group">
<label for="image" class="text-info">Image:</label><br>
<span>
<%= f.file_field :image %>
</span>
</div>
   </div>

   <div class="form-group">
   <div>
   <label for="Choose category" class="text-info">Choose category:</label><br>
      <span>
         <select name="product[category_id]" class="w-100 p-2">
            <% @categories.each do |category| %>
            <option
               value=<%= category.id%>><%= category.name%></option>
            <% end %>
   
            
         </select>
      </span>
   </div>
   </div>


   <div class="form-group">
   <label for="name" class="text-info">Name:</label><br>
   <span>
   <%= f.text_field :name, :class => 'form-control' %>
   </span>
</div>

<div class="form-group">
<label for="description" class="text-info">Description:</label><br>
<span>
<%= f.text_area :description, :class => 'form-control h-auto' %>
</span>
</div>

<div class="form-group">
<label for="description" class="text-info">Price:</label><br>
<span>
<%= f.number_field :price, :class => 'form-control' %>
</span>
</div>




<div class="d-flex justify-content-center my-5">
<input type="submit" name="submit" class="btn btn-info btn-md w-25" value="submit">
</div>




<%end%>


</div>