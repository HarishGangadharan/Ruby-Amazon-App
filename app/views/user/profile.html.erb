<div class='container'>
<h2 class='text-center font-weight-bold m-4'> Account Details </h2>
<%= form_for :user, url: user_saveprofile_path(),  html: { multipart: true  }  do |f| %>
  
   <div class="form-group text-center">
   <% if  @current_user.image.to_s != '/images/original/missing.png' %>
   <%= image_tag( @current_user.image, {:class => 'img-thumbnail rounded-circle w-25 my-3'}) %>
   <% else %>
   <%= image_tag( '/assets/default.png', {:class => 'img-thumbnail rounded-circle w-25 my-3'}) %>

   <% end %>

<span>
<%= f.file_field :image,  :class => 'ml-3' %>
</span>
</div>
   <div class='d-flex'>

<div class='w-50 p-3'>



 

   <div class="form-group">
   <label for="Username" class="text-info">Username:</label><br>
   <span>
   <%= f.text_field :name,  :disabled => true , :class => 'form-control' %>
   </span>
</div>

<div class="form-group">
<label for="Email" class="text-info">Email:</label><br>
<span>
<%= f.text_field :email,  :disabled => true , :class => 'form-control' %>
</span>
</div>

<div class="form-group">
<label for="Firstname" class="text-info">Firstname:</label><br>
<span>
<%= f.text_field :firstname, :class => 'form-control' %>
</span>
</div>

<div class="form-group">
<label for="Lastname" class="text-info">Lastname:</label><br>
<span>
<%= f.text_field :lastname, :class => 'form-control' %>
</span>
</div>

<div class="form-group">
<label for="Mobile" class="text-info">Mobile:</label><br>
<span>
<%= f.number_field :mobile, :class => 'form-control' %>
</span>
</div>

</div>
<div class='w-50 mt-3'>


<div class="form-group">
<label for="Addressline" class="text-info">Address line:</label><br>
<span>
<%= f.text_field :addressline, :class => 'form-control' %>
</span>
</div>


<div class="form-group">
<label for="street" class="text-info">Street:</label><br>
<span>
<%= f.text_field :street, :class => 'form-control' %>
</span>
</div>



<div class="form-group">
<label for="city" class="text-info">City:</label><br>
<span>
<%= f.text_field :city, :class => 'form-control' %>
</span>
</div>

<div class="form-group">
<label for="pincode" class="text-info">Pincode:</label><br>
<span>
<%= f.number_field :pincode, :class => 'form-control' %>
</span>
</div>
</div>


</div>
<div class="d-flex justify-content-center">
<input type="submit" name="submit" class="btn btn-info btn-md w-25" value="submit">
</div>




<% end %>




</div>